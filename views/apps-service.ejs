<%- contentFor('html_attribute') %>

<%- contentFor('extra_css') %>
<!-- gridjs css -->
<link rel="stylesheet" href="/vendor/gridjs/theme/mermaid.min.css" />

<%- contentFor('body_attribute') %>

<%- contentFor('content') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header border-bottom border-dashed d-flex align-items-center">
        <h4 class="card-title mb-0 flex-grow-1">Servizi</h4>
        <div class="text-muted fs-13">
          <div id="servizi-status">Caricamento...</div>
        </div>
      </div><!-- end card header -->

      <div class="card-body">
        <div id="table-gridjs"></div>

        <!-- Service details modal -->
        <div
          class="modal fade"
          id="serviceDetailsModal"
          tabindex="-1"
          aria-labelledby="serviceDetailsModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="serviceDetailsModalLabel">Dettaglio servizio</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Chiudi"
                ></button>
              </div>

              <div class="modal-body">
                <dl class="row mb-0">
                  <dt class="col-sm-4">Codice</dt>
                  <dd class="col-sm-8" id="m-codice"></dd>

                  <dt class="col-sm-4">Nome</dt>
                  <dd class="col-sm-8" id="m-nome"></dd>

                  <dt class="col-sm-4">Famiglia</dt>
                  <dd class="col-sm-8" id="m-famiglia"></dd>

                  <dt class="col-sm-4">Descrizione</dt>
                  <dd class="col-sm-8" id="m-descrizione"></dd>

                  <dt class="col-sm-4">Prezzo</dt>
                  <dd class="col-sm-8" id="m-prezzo"></dd>

                  <hr class="my-3" />

                  <dt class="col-sm-4">Obiettivo</dt>
                  <dd class="col-sm-8" id="m-obiettivo"></dd>

                  <dt class="col-sm-4">Servizio</dt>
                  <dd class="col-sm-8" id="m-servizio"></dd>

                  <dt class="col-sm-4">Vantaggi</dt>
                  <dd class="col-sm-8" id="m-vantaggi"></dd>
                </dl>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                  Chiudi
                </button>
              </div>
            </div>
          </div>
        </div><!-- end modal -->
      </div><!-- end card-body -->
    </div><!-- end card -->
  </div><!-- end col -->
</div><!-- end row -->

<%- contentFor('extra_javascript') %>
<script src="/vendor/gridjs/gridjs.umd.js"></script>
<script src="/js/pages/apps-service.js"></script>