<%- contentFor('html_attribute') %>

<%- contentFor('extra_css') %>
<!-- gridjs css -->
<link rel="stylesheet" href="/vendor/gridjs/theme/mermaid.min.css" />

<%- contentFor('body_attribute') %>

<%- contentFor('content') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header border-bottom border-dashed d-flex align-items-center">
        <h4 class="card-title mb-0 flex-grow-1">Lead</h4>
        <div class="text-muted fs-13">
          <div id="leads-status">Caricamento...</div>
        </div>
      </div><!-- end card header -->

      <div class="card-body">
        <div id="table-gridjs"></div>

        <!-- Lead details modal -->
        <div
          class="modal fade"
          id="leadDetailsModal"
          tabindex="-1"
          aria-labelledby="leadDetailsModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="leadDetailsModalLabel">Dettaglio lead</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Chiudi"
                ></button>
              </div>

              <div class="modal-body">
                <dl class="row mb-0">
                  <dt class="col-sm-4">Nome</dt>
                  <dd class="col-sm-8" id="m-nome"></dd>

                  <dt class="col-sm-4">Email</dt>
                  <dd class="col-sm-8" id="m-email"></dd>

                  <dt class="col-sm-4">Azienda</dt>
                  <dd class="col-sm-8" id="m-azienda"></dd>

                  <dt class="col-sm-4">Stato</dt>
                  <dd class="col-sm-8" id="m-stato"></dd>

                  <dt class="col-sm-4">Data Creazione</dt>
                  <dd class="col-sm-8" id="m-data-creazione"></dd>
                </dl>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                  Chiudi
                </button>
              </div>
            </div>
          </div>
        </div><!-- end modal -->
      </div><!-- end card-body -->
    </div><!-- end card -->
  </div><!-- end col -->
</div><!-- end row -->

<%- contentFor('extra_javascript') %>
<script src="/vendor/gridjs/gridjs.umd.js"></script>
<script src="/js/pages/apps-leads.js"></script>