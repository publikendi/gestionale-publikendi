<link rel="stylesheet" href="/vendor/gridjs/theme/mermaid.min.css" />

<%- contentFor('body_attribute') %>

<%- contentFor('content') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header border-bottom border-dashed d-flex align-items-center">
        <h4 class="card-title mb-0 flex-grow-1">Preventivi</h4>
        <div class="text-muted fs-13">
          <div id="quote-status">Caricamento...</div>
        </div>
      </div><!-- end card header -->

      <div class="card-body">
        <div id="table-gridjs"></div>

        <!-- Quote details modal -->
        <div
          class="modal fade"
          id="quoteDetailsModal"
          tabindex="-1"
          aria-labelledby="quoteDetailsModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="quoteDetailsModalLabel">Dettaglio Preventivo</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Chiudi"
                ></button>
              </div>

              <div class="modal-body">
                <dl class="row mb-0">
                  <dt class="col-sm-4">Nome Preventivo</dt>
                  <dd class="col-sm-8" id="m-name"></dd>

                  <dt class="col-sm-4">Nome Opportunit√†</dt>
                  <dd class="col-sm-8" id="m-name-opportunity"></dd>

                  <dt class="col-sm-4">Scadenza Preventivo</dt>
                  <dd class="col-sm-8" id="m-close-date"></dd>

                  <dt class="col-sm-4">Totale</dt>
                  <dd class="col-sm-8" id="m-amount"></dd>

                </dl>
              </div>

              <div class="modal-footer">
                  <a href="#" id="btn-view-quote-detail" class="btn btn-primary">
                    Visualizza Preventivo
                  </a>
                  <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    Chiudi
                  </button>
              </div>
            </div>
          </div>
        </div><!-- end modal -->
      </div><!-- end card-body -->
    </div><!-- end card -->
  </div><!-- end col -->
</div><!-- end row -->

